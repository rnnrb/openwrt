/dts-v1/;
#include "sf21a6826p.dtsi"

/ {
	model = "Siflower SF21A6826P evaluation board";
	compatible = "siflower,sf21a6826p-evb", "siflower,sf21a6826p";

	chosen {
		stdout-path = &uart1;
		rootdisk = <&rootdisk>;
	};

	cpus {
		timebase-frequency = <57142857>;
	};

	refclk100mhz: clk100m {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <100000000>;
		clock-output-names = "fixed-100m";
	};

	refclk57mhz: clk57m {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <57142857>;
		clock-output-names = "fixed-57m";
	};
};

&uart1 {
	status = "okay";
	clocks = <&refclk100mhz>;
};

&spi0 {
	status = "okay";
	clocks = <&refclk57mhz>;

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		#address-cells = <1>;
		#size-cells = <1>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "bootloader";
				reg = <0x0 0x90000>;
				read-only;
			};

			factory: partition@90000 {
				label = "factory";
				reg = <0x90000 0x10000>;
			};

			rootdisk: partition@a0000 {
				label = "firmware";
				reg = <0xa0000 0xfff60000>;
				compatible = "denx,fit";
			};
		};
	};
};

&xgmac0 {
	status = "okay";
	phy-handle = <&ephy0>;
	clocks = <&refclk57mhz>;

	mdio {
		#address-cells = <1>;
		#size-cells = <0>;
		suppress-preamble;
		clock-frequency = <8333333>;

		ephy0: ethernet-phy@7 {
			compatible = "ethernet-phy-id0141.0e40", "ethernet-phy-ieee802.3-c22";
			reg = <7>;
			reset-gpios = <&gpio 38 GPIO_ACTIVE_LOW>;
			reset-assert-us = <10000>;
			reset-deassert-us = <100000>;
		};
	};
};

&xgmac1 {
	status = "okay";
	phy-handle = <&ephy1>;
	clocks = <&refclk57mhz>;

	mdio {
		#address-cells = <1>;
		#size-cells = <0>;
		suppress-preamble;
		clock-frequency = <8333333>;

		ephy1: ethernet-phy@5 {
			compatible = "ethernet-phy-id0141.0e40", "ethernet-phy-ieee802.3-c22";
			reg = <5>;
			reset-gpios = <&gpio 39 GPIO_ACTIVE_LOW>;
			reset-assert-us = <10000>;
			reset-deassert-us = <100000>;
		};
	};
};

&xgmac2 {
	status = "okay";
	phy-handle = <&ephy2>;
	clocks = <&refclk57mhz>;

	mdio {
		#address-cells = <1>;
		#size-cells = <0>;
		suppress-preamble;
		clock-frequency = <8333333>;

		ephy2: ethernet-phy@4 {
			compatible = "ethernet-phy-id0141.0e40", "ethernet-phy-ieee802.3-c22";
			reg = <4>;
			reset-gpios = <&gpio 40 GPIO_ACTIVE_LOW>;
			reset-assert-us = <10000>;
			reset-deassert-us = <100000>;
		};
	};
};

&xgmac3 {
	status = "okay";
	phy-handle = <&ephy3>;
	clocks = <&refclk57mhz>;

	mdio {
		#address-cells = <1>;
		#size-cells = <0>;
		suppress-preamble;
		clock-frequency = <8333333>;

		ephy3: ethernet-phy@5 {
			compatible = "ethernet-phy-id0141.0e40", "ethernet-phy-ieee802.3-c22";
			reg = <5>;
			reset-gpios = <&gpio 19 GPIO_ACTIVE_LOW>;
			reset-assert-us = <10000>;
			reset-deassert-us = <100000>;
		};
	};
};

&dpns {
	status ="okay";
	clocks = <&refclk57mhz>;
};

&edma {
	status = "okay";
	clocks = <&refclk57mhz>, <&refclk57mhz>, <&refclk57mhz>;
};
